{
  "name": "template.data.gouv.fr",
  "version": "1.0.0",
  "description": "Template CSS pour data.gouv.fr et compagnie.",
  "license": "MIT",
  "devDependencies": {
    "copyfiles": "^1.2.0",
    "cssnano": "^3.10.0",
    "gh-pages": "^1.0.0",
    "postcss-cli": "^4.1.1",
    "postcss-cssnext": "^3.0.2",
    "postcss-import": "^11.0.0",
    "postcss-reporter": "^5.0.0",
    "stylelint": "^8.1.1",
    "stylelint-config-standard": "^17.0.0"
  },
  "scripts": {
    "deploy": "yarn dist && gh-pages -d dist",
    "dev": "postcss --output src/main.css --watch src/css/template.css",
    "lint": "stylelint --fix src/css/*.css",
    "test": "stylelint src/css/*.css",
    "prepublish": "NODE_ENV=production postcss --output template.css src/css/index.css",
    "dist": "yarn dist-css && yarn dist-site",
    "dist-css": "postcss --output dist/style/main.css src/css/index.css && NODE_ENV=production postcss --output dist/style/main.min.css src/css/index.css",
    "dist-site": "copyfiles images/* images/**/* fonts/**/* index.html dist"
  },
  "files": ["dist", "src/css"],
  "style": "dist/style/main.min.css",
  "main": "dist/style/main.css",
  "repository": {
    "type": "git",
    "url": "https://github.com/etalab/template.data.gouv.fr.git"
  },
  "bugs": {
    "url": "https://github.com/etalab/template.data.gouv.fr/issues"
  }
}
